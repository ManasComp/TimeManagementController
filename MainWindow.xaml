<Window x:Class="TimeManagementController.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeManagementController"
        mc:Ignorable="d"
        Title="TimeManagement-Controller" Height="200" Width="300">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Username"/>
                <TextBox Text="{Binding Username}" Width="60" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Username"/>
                <TextBox Text="{Binding Password}" Width="60"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Button Content="OpenFileDIalog" Click="OpenFileDIalog" Margin="5"/>
                <Label Content="{Binding Url}"/>
            </StackPanel>


            <StackPanel Orientation="Horizontal" >
                <Button Content="Login" Click="Login" Margin="5"/>
                <Button Content="Register" Click="Register" Margin="5"/>
            </StackPanel>
            
            <Label Content="{Binding Id}"/>
        </StackPanel>
    </Grid>
</Window>
